<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.handysouls.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:background="#FF000000">
    
    <RelativeLayout
        android:id="@+id/start_screen_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
	    <ImageView
	        android:id="@+id/start_logo"
	        android:src="@drawable/ds_logo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        />
	    
	    <Button
	        android:id="@+id/move_on"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:text="@string/prepare"
			android:textColor="#FFDDDDDD"
			android:textSize="40sp"
			android:layout_centerInParent="true"
	        />
	    <TextView 
	        android:id="@+id/start_tag_line"
	        android:layout_below="@id/start_logo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"
	        android:textSize="50sp"
	        android:paddingTop="10dp"
	        android:text="@string/tag"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/weapon_list_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
	    <TextView
	        android:id="@+id/test_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/top"
	        android:textColor="#DDDD2222"
	        android:textSize="80sp"
	        android:layout_gravity="center"
	        />
	    <ListView
	        android:layout_below="@id/test_text"
	        android:id="@android:id/list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
        
    </RelativeLayout>
    
</FrameLayout>

